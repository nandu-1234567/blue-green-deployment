 aws deploy create-deployment \
  --application-name my-strapi-codedeploy-app \
  --deployment-group-name my-strapi-dg \
  --revision '{
      "revisionType": "AppSpecContent",
      "appSpecContent": {
          "version": 0.0,
          "Resources": [
              {
                  "TargetService": {
                      "Type": "AWS::ECS::Service",
                      "Properties": {
                          "TaskDefinition": "my-task-def",
                          "LoadBalancerInfo": {
                              "ContainerName": "strapi",
                              "ContainerPort": 1337
                          }
                      }
                  }
              }
          ]
      }
  }'
